# JobFlow AI - Environment Variables
# Copy this file to .env and fill in your values

# Google OAuth2 (for production)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Database
DATABASE_URL=sqlite:///jobflow.db

# Encryption (generate a secure 32-byte key)
# Example: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_MASTER_KEY=your_32_byte_encryption_key_here
